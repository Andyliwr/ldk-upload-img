extends layout

block content
  div#user-container.container
    div.row
      div.left.col-xs-12.col-sm-3
        img.img-rounded(src=user.avatar, alt=user.username)
        p.name=user.username
        p.email=user.email
      div.right.col-xs-12.col-sm-9
        div.bs-example.bs-example-tabs(data-example-id='togglable-tabs')
          ul#myTabs.nav.nav-tabs(role='tablist')
            li.active(role='presentation')
              a#home-tab(href='#home', role='tab', data-toggle='tab', aria-controls='home', aria-expanded='true') Home
            li(role='presentation')
              a#profile-tab(href='#profile', role='tab', data-toggle='tab', aria-controls='profile', aria-expanded='false') Profile
