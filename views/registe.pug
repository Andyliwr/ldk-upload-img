extends layout

block content
  div#registe-container.container
    div.well
      form.form.form-horizontal
        legend 注册新用户
        div.group
          label.sr-only(for='inputEmail') Username
          input#inputName.form-control(type='text', placeholder='Username', required='', autofocus='')
          i.glyphicon.glyphicon-ok.text-success
        div.group
          label.sr-only(for='inputEmail') Email address
          input#inputEmail.form-control(type='email', placeholder='Email address', required='', autofocus='')
          i.glyphicon.glyphicon-ok.text-success  
        div.group
          label.sr-only(for='inputPassword') Password
          input#inputPassword.form-control(type='password', placeholder='Password', required='')
          i.glyphicon.glyphicon-ok.text-success
        div.group
          label.sr-only(for='inputRePassword') Confirm password
          input#inputRePassword.form-control(type='password', placeholder='Confirm password', required='')
          i.glyphicon.glyphicon-ok.text-success
        div.group
          p.err-tips.text-danger &nbsp;
        div.group
          button#doRegiste.btn.btn-primary 注册
  script(type="text/javascript" src="/scripts/registe.js")