extends layout

block content
  div#login-container.container
    div.well
      form.form.form-horizontal
        legend 请登录
        div.group
          label.sr-only(for='inputEmail') 用户名或者邮箱
          input#inputEmail.form-control(type='text', placeholder='用户名或者邮箱', autofocus='')
        div.group
          label.sr-only(for='inputPassword') 密码
          input#inputPassword.form-control(type='password', placeholder='密码')
        div.group
          p.err-tips.text-danger &nbsp;
        a#doLogin.btn.btn-primary
          i.glyphicon.glyphicon-repeat
          | 登录

block script
  script(type="text/javascript" src="//fs.andylistudio.com/source/js/login.min.js")
